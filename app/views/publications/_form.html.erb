<%= simple_form_for @publication do |f| %>
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :name %>
  <%= f.label :welcome %>
  <%= f.cktext_area :welcome, :toolbar=>'Article', :width=>'600px', :height=>'400px' %>
  <%= f.input :copyright %>
  <%= f.input :issn %>
  <%= f.input :publisher %>
  <%= f.button :submit %>
<% end %>