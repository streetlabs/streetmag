<div id="page">

		<div id="mainBlock">
			
			<img src="/images/inquire/rotator/01.jpg" alt="" title="" width="480px" height="260px" />
			
					
			<div id="volume">
				<div id="issue">Issue <%= @issue.volume %>.<%= @issue.issue_number %>: <%=  Date::MONTHNAMES[@issue.publication_date.month] %> <%= @issue.publication_date.year %></div>
				<div id="issueTitle"><%= @issue.title %></div>
				
          <% @issue.sections.order("section_id asc").each do |section| %>
            <h3><%= section.name %></h3>
            <ul>
              <% Arrangement.joins(:article).where("issue_id = ? AND section_id = ?", @issue.id, section.id).order("title").each do |arrangement| %>
                <li>
                <% link_to article_url(arrangement.article) do%>
                  <span class="author_name_main"><%= arrangement.article.author.name %></span>, &lsquo;<%= raw sanitize arrangement.article.formatted_title %>&rsquo;
                <% end %>
                </li>
              <% end %>
            </ul>
          <% end %>
				
			</div>
		</div>
			
	
		<div id="news">
      <%= render 'news_feed'%>
			<%= render 'twitter' %>
		</div>
		
		<%= render 'sidebar' %>
		
		<div style="clear: both;">&nbsp;</div><br clear="left" />
				
	
</div>