<div class="admin">
  <h1>Author :: VIEW</h1>
  <div id="management">
    <span class="tools">tools</span>
    <%= link_to '[•] Edit', edit_admin_publication_admin_author_path(@publication, @author) %> |
    <%= link_to '[«] Back', admin_publication_admin_authors_path(@publication) %>
  </div>

  <div class="properties">
    <p>
      <b>Name:</b>
      <%= @author.name %>
    </p>

    <p>
      <b>Email:</b>
      <%= @author.email %>
    </p>

    <p>
      <b>Url:</b>
      <%= @author.url %>
    </p>

    <p>
      <b>Affiliation:</b>
      <%= @author.affiliation %>
    </p>
  </div>
  
  <div class="mag">

    <%= raw @author.bio %>

  </div>
</div>