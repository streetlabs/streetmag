<div class="admin">
<h1>HUB PAGES &rarr; DEPRICATED</h1>

<div id="management">
  <span class="tools">tools</span>
  <%= link_to '[+] New Page', new_admin_publication_admin_site_page_path(@publication) %>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Publication</th>
    <th>Visible</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @site_pages.each do |site_page| %>
  <tr>
    <td><%= site_page.title %></td>
    <td><%= site_page.publication.title %></td>
    <td><%= site_page.is_published? ? "yes" : "no" %></td>
    <td><%= link_to 'Show', admin_publication_admin_site_page_path(@publication, site_page) %></td>
    <td><%= link_to 'Edit', edit_admin_publication_admin_site_page_path(@publication, site_page) %></td>
    <td><%= link_to 'Destroy', admin_publication_admin_site_page_path(@publication, site_page), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

</div>