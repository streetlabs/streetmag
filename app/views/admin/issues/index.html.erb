<% title "STREETMAG » " + @publication.title + " » Issues" %>  
<div class="admin">
  <div id="management">
    <span class="tools">tools</span>
    <%= link_to '[+] New Issue', new_admin_publication_admin_issue_path %>
  </div>

<h1>Issues :: LIST</h1>

<table>
  <tr>
    <th>Published</th>
    <th>Title</th>
    <th>Volume</th>
    <th>Number</th>
    <th>Year</th>
    <th>Month</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr class="<%= issue.is_published? ? "published" :  "unpublished" %>">
    <td><%= issue.is_published? ? "yes" :  "no" %></td>
    <td><%= issue.title %></td>
    <td><%= issue.volume %></td>
    <td><%= issue.issue_number %></td>
    <td><%= issue.publication_date.year unless issue.publication_date == nil%></td>
    <td><%= Date::MONTHNAMES[issue.publication_date.month] unless issue.publication_date == nil%></td>
    <td><%= link_to 'View', admin_publication_admin_issue_path(@publication, issue) %></td>
    <td><%= link_to 'Edit', edit_admin_publication_admin_issue_path(@publication, issue)  %></td>
    <td>
    <% if !issue.is_published? %>
      <%= link_to 'Destroy', admin_publication_admin_issue_path(@publication, issue) , :confirm => 'Are you sure?', :method => :delete %>
    <% else %>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

</div>