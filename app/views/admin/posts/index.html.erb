<% title "STREETMAG » Publications" %>  

<div class="admin">
  <h1>NEWS POSTS :: LIST</h1>
  <div id="management">
    <span class="tools">tools</span>
    <%= link_to '[+] New Post', new_admin_publication_admin_post_path(@publication) %>
  </div>

<table>
  <tr>
    <th>Title</th>
