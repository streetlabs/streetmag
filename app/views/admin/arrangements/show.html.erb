<div class="admin">
<h1>Article Arrangements :: VIEW</h1>
<div id="management">
  <span class="tools">tools</span>
  <%= link_to '[•] Edit', edit_admin_publication_admin_arrangement_path(@publication, @arrangement) %> |
  <%= link_to '[«] Back', admin_publication_admin_arrangements_path(@publication) %>
</div>
<div class="properties">
<% if @arrangement.issue != nil %>
<p>
  <b>Issue:</b>
  <%= @arrangement.issue.title %>
</p>
<% end %>

<p>
  <b>Section:</b>
  <%= @arrangement.section.name unless @arrangement.section == nil %>
</p>

<p>
  <b>Article:</b>
  <%= @arrangement.article.title %>
</p>

<p>
  <b>Publication:</b>
  <%= @arrangement.publication.name %>
</p>


</div>
</div>