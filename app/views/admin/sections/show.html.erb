<div class="admin">
  <h1>Sections :: VIEW</h1>
  <div id="management">
    <span class="tools">tools</span>
    <%= link_to '[•] Edit',edit_admin_publication_admin_section_path(@publication, @section)%> |
    <%= link_to '[«] Back', admin_publication_admin_sections_path(@publication) %>
  </div>
  <div class="properties">
    <p>
      <b>Name:</b>
      <%= @section.name %>
    </p>

    <p>
      <b>Publication:</b>
      <%= @section.publication.title %>
    </p>

    <p>
      <b>Static Section:</b>
      <%= @section.is_static? ? "yes" : "no" %>  
    </p>
    <p>
      <b>Parent Section:</b>
      <%= @section.parent.name unless @section.parent==nil %>
    </p>
  </div>
</div>