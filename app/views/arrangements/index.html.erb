<div class="admin">
<h1>Article Arrangements :: LIST</h1>

<table>
  <tr>
    <th>Issue</th>
    <th>Section</th>
    <th>Article</th>
    <th>Publication</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @arrangements.each do |arrangement| %>
  <tr>
    <td><%= arrangement.issue.title unless arrangement.issue == nil %></td>
    <td><%= arrangement.section.name unless arrangement.section == nil %></td>
    <td><%= arrangement.article.title unless arrangement.article == nil %></td>
    <td><%= arrangement.publication.title %></td>
    <td><%= link_to 'Show', publication_arrangement_path(@publication, arrangement) %></td>
    <td><%= link_to 'Edit', edit_publication_arrangement_path(@publication, arrangement) %></td>
    <td><%= link_to 'Destroy', publication_arrangement_path(@publication, arrangement) , :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Arrangement', new_publication_arrangement_path(@publication)  %>
</div>
    
